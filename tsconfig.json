{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "configuration/*": ["./src/configuration/*"],
        "weather/*": ["./src/weather/*"],
        "home/*": ["./src/home/*"],
        "settings/*": ["./src/settings/*"],
        "icons/*": ["./icons/*"],
      },
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext"
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }